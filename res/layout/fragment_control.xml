<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarSize="0dp"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="596dp" >

        <View
            android:id="@+id/greenView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/z_10button"
            android:layout_alignLeft="@+id/z_10button"
            android:layout_alignRight="@+id/z_1button"
            android:layout_alignTop="@+id/z_10button"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/view_green" />

        <View
            android:id="@+id/greenView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zp10button"
            android:layout_alignLeft="@+id/zp1button"
            android:layout_alignRight="@+id/zp10button"
            android:layout_alignTop="@+id/zp10button"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/view_green" />

        <View
            android:id="@+id/redView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/xp1button"
            android:layout_alignLeft="@+id/xp1button"
            android:layout_alignRight="@+id/xp1button"
            android:layout_alignTop="@+id/xp10button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/view_red" />

        <View
            android:id="@+id/redView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/x_10button"
            android:layout_alignLeft="@+id/x_1button"
            android:layout_alignRight="@+id/x_1button"
            android:layout_alignTop="@+id/x_1button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/view_red" />

        <View
            android:id="@+id/blueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/y_1button"
            android:layout_alignLeft="@+id/y_10button"
            android:layout_alignRight="@+id/y_1button"
            android:layout_alignTop="@+id/y_1button"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/view_blue" />

        <View
            android:id="@+id/blueView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/yp10button"
            android:layout_alignLeft="@+id/zp1button"
            android:layout_alignRight="@+id/yp10button"
            android:layout_alignTop="@+id/yp10button"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-5dp"
            android:background="@drawable/view_blue" />

        <Button
            android:id="@+id/x_10button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/x_1button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corner"
            android:text="- 10" />

        <TextView
            android:id="@+id/statusTextView"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/errorTV"
            android:gravity="center"
            android:text="Stato stampante"
            android:textSize="@dimen/bigText" />

        <Button
            android:id="@+id/z_10button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/z_1button"
            android:layout_alignBottom="@+id/z_1button"
            android:layout_alignLeft="@+id/homexbutton"
            android:background="@drawable/corner"
            android:text="- 10" />

        <Button
            android:id="@+id/z_1button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/homezbutton"
            android:layout_alignBottom="@+id/homezbutton"
            android:layout_toRightOf="@+id/z_10button"
            android:background="@drawable/corner"
            android:text="- 1" />

        <Button
            android:id="@+id/zp10button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/zp1button"
            android:layout_alignBottom="@+id/zp1button"
            android:layout_alignRight="@+id/homeybutton"
            android:background="@drawable/corner"
            android:text="+ 10" />

        <Button
            android:id="@+id/zp1button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/homezbutton"
            android:layout_alignBottom="@+id/homezbutton"
            android:layout_toLeftOf="@+id/zp10button"
            android:background="@drawable/corner"
            android:text="+ 1" />

        <Button
            android:id="@+id/y_1button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/homeButton"
            android:layout_alignBottom="@+id/homeButton"
            android:layout_alignRight="@+id/greenView"
            android:background="@drawable/corner"
            android:text="- 1" />

        <Button
            android:id="@+id/y_10button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/y_1button"
            android:layout_alignBottom="@+id/y_1button"
            android:layout_alignLeft="@+id/homexbutton"
            android:background="@drawable/corner"
            android:text="- 10" />

        <TextView
            android:id="@+id/errorTV"
            style="@style/offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="error"
            android:textSize="@dimen/mediumText" />

        <Button
            android:id="@+id/xp10button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/homexbutton"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corner"
            android:text="+ 10" />

        <Button
            android:id="@+id/x_1button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/x_10button"
            android:layout_below="@+id/homeButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner"
            android:text="- 1" />

        <Button
            android:id="@+id/xp1button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xp10button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corner"
            android:text="+ 1" />

        <Button
            android:id="@+id/homeButton"
            style="@style/home_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/redView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:text="Home"
            android:textSize="@dimen/bigText" />

        <Button
            android:id="@+id/yp10button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/yp1button"
            android:layout_alignBottom="@+id/yp1button"
            android:layout_alignRight="@+id/homeybutton"
            android:background="@drawable/corner"
            android:text="+ 10" />

        <Button
            android:id="@+id/homeybutton"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/xp1button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/view_blue"
            android:text=" Home Y "
            android:textSize="@dimen/bigText" />

        <Button
            android:id="@+id/yp1button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/homeButton"
            android:layout_alignBottom="@+id/homeButton"
            android:layout_toLeftOf="@+id/yp10button"
            android:background="@drawable/corner"
            android:text="+ 1" />

        <Button
            android:id="@+id/homexbutton"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/statusTextView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/view_red"
            android:text=" Home X "
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/textViewX"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/xp1button"
            android:layout_alignBottom="@+id/xp1button"
            android:layout_alignLeft="@+id/homexbutton"
            android:text="X = "
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/xValueTextView"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewX"
            android:layout_alignBottom="@+id/textViewX"
            android:layout_toRightOf="@+id/textViewX"
            android:gravity="right"
            android:text="0"
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/zValueTextView"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewZ"
            android:layout_alignBottom="@+id/textViewZ"
            android:layout_toRightOf="@+id/textViewZ"
            android:gravity="right"
            android:text="0"
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/textViewY"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/xp1button"
            android:layout_alignBottom="@+id/xp1button"
            android:layout_toLeftOf="@+id/yValueTextView"
            android:text="Y = "
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/yValueTextView"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewY"
            android:layout_alignBottom="@+id/textViewY"
            android:layout_alignRight="@+id/yp10button"
            android:gravity="right"
            android:text="0"
            android:textSize="@dimen/bigText" />

        <Button
            android:id="@+id/homezbutton"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/redView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:background="@drawable/view_green"
            android:text=" Home z "
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/textViewZ"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/z_10button"
            android:layout_below="@+id/redView2"
            android:text="Z = "
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/extrudeTV"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/z_10button"
            android:layout_marginTop="40dp"
            android:text="Estrudi"
            android:textSize="@dimen/bigText" />

        <Button
            android:id="@+id/extrudep10button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/extrudeTV"
            android:layout_alignBottom="@+id/extrudeTV"
            android:layout_toLeftOf="@+id/greenView2"
            android:text="+ 10" />

        <Button
            android:id="@+id/extrudep1button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/extrudep10button"
            android:layout_alignBottom="@+id/extrudep10button"
            android:layout_toLeftOf="@+id/extrudep10button"
            android:text=" + 1 " />

        <Button
            android:id="@+id/retract1button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/retractTV"
            android:layout_alignBottom="@+id/retractTV"
            android:layout_alignLeft="@+id/extrudep1button"
            android:layout_alignRight="@+id/extrudep1button"
            android:text=" - 1 " />

        <TextView
            android:id="@+id/retractTV"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/extrudep1button"
            android:layout_marginTop="39dp"
            android:text="Ritrai"
            android:textSize="@dimen/bigText" />

        <Button
            android:id="@+id/retract10button"
            style="@style/control_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/retract1button"
            android:layout_alignBottom="@+id/retract1button"
            android:layout_alignRight="@+id/extrudep10button"
            android:layout_toRightOf="@+id/extrudep1button"
            android:text="- 10" />

    </RelativeLayout>

</ScrollView>